<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_create_vacancies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/container_create_vacancies">

    <LinearLayout
        android:id="@+id/container_auto_layout_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_auto_layout_horizontal"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/img_shape"
            android:layout_width="290dp"
            android:layout_height="270dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="-89dp"
            android:layout_marginTop="-117dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_shape" />

        <LinearLayout
            android:id="@+id/container_navbar"
            android:layout_width="match_parent"
            android:layout_marginTop="-130dp"
            android:layout_height="48dp"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingTop="4.5dp"
            android:paddingBottom="4.5dp">

            <TextView
                android:id="@+id/container_auto_layout_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginLeft="50dp"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Tạo bài viết mới"
                android:textColor="#FF09101D"
                android:textSize="26dp" />
            <!-- 120:237:space-view0 Navbar_space_view0 space-view -->
            <View
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/container_auto_layout_horizontal1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <ImageView
            android:id="@+id/container_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/container_line" />

        <LinearLayout
            android:id="@+id/container_auto_layout_horizontal2"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Title"
                android:textColor="#FF000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_required"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="*"
                android:textColor="#FFFF7C74"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_auto_layout_vertical3"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@drawable/container_auto_layout_horizontal"
            android:gravity="left|top"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="28dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/text_title_content1"
                android:layout_width="320dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:hint="Title"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_auto_layout_horizontal5"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_abstract_content"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Abtract Content"
                android:textColor="#FF000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_required1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="*"
                android:textColor="#FFFF7C74"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_auto_layout_vertical312"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@drawable/container_auto_layout_horizontal"
            android:gravity="left|top"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="28dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/text_abstract_content1"
                android:layout_width="320dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:hint="Abtract Content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_auto_layout_horizontal8"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Content"
                android:textColor="#FF000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_required2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="*"
                android:textColor="#FFFF7C74"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_auto_layout_vertical31"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@drawable/container_auto_layout_horizontal"
            android:gravity="left|top"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="28dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/text_main_content"
                android:layout_width="320dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:hint="Content"/>
            <!-- 120:285:space-view0 Auto Layout Horizontal_space_view0 space-view -->
            <View
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_auto_layout_horizontal10"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_category"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Category"
                android:textColor="#FF000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_required3"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="*"
                android:textColor="#FFFF7C74"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_auto_layout_horizontal12"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:background="@drawable/container_auto_layout_horizontal"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="28dp"
            android:paddingBottom="5dp">

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:background="@drawable/container_auto_layout_horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="28dp" />

            <!-- 120:292:space-view0 Auto Layout Horizontal_space_view0 space-view -->
            <View
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_weight="1" />


        </LinearLayout>
        <!-- 120:235:space-view0 Auto Layout Vertical_space_view0 space-view -->

        <LinearLayout
            android:id="@+id/container_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/container_button1"
                android:gravity="center_horizontal|top"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingTop="14dp"
                android:paddingRight="18dp"
                android:paddingBottom="14dp">


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-5dp"
        android:background="@drawable/container_frame"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- Home Section -->
        <FrameLayout
            android:id="@+id/container_group3"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/image_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/image_home" />
        </FrameLayout>

        <!-- Profile Section -->
        <FrameLayout
            android:id="@+id/container_group6"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/image_account_circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/image_account_circle" />
        </FrameLayout>

        <!-- Applications Section -->
        <FrameLayout
            android:id="@+id/container_group4"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/image_list"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/image_list" />
        </FrameLayout>

        <!-- Settings Section -->
        <FrameLayout
            android:id="@+id/container_group5"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/setting" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
