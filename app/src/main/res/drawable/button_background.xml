<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0C656E" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="12dp" /> <!-- Góc bo tròn -->
        </shape>
    </item>

    <!-- Trạng thái không được kích hoạt -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#38C4D1" /> <!-- Màu nền khi không được kích hoạt -->
            <corners android:radius="12dp" /> <!-- Góc bo tròn -->
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#38C4D1" /> <!-- Màu nền mặc định -->
            <corners android:radius="12dp" /> <!-- Góc bo tròn -->
        </shape>
    </item>
</selector>
